Algoritmo sumaProductoResta
	Escribir "Ingrese el primer valor:"
	Leer valor1
	Escribir "Ingrese el segundo valor:"
	Leer valor2
	suma <- valor1 + valor2
	producto <- valor1 * valor2
	resta <- valor1 - valor2
	Escribir "La suma de los valores es:", suma
	Escribir "El producto de los valores es:", producto
	Escribir "La resta del primer valor menos el segundo valor es:", resta
FinAlgoritmo
